<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        @<%= @post.user.username %>
      </div><!-- .name -->
    </div><!-- .post-head -->
    <div class="image center-block">
      <%= image_tag @post.image.url(:medium) %>
    </div><!-- .image .center-block -->
    <p class="caption">
      <%= @post.caption %>
    </p>
    <div class="text-center edit-links">
      <%= link_to "Cancel", posts_path %>
      |
      <%= link_to "Editar", edit_post_path(@post) %>
      |
      <%= link_to "Excluir", post_path(@post), method: :delete, data: { confirm: 'Do you really want to delete?' } %>
    </div>
  </div><!-- .post -->
</div><!-- .posts-wrapper -->

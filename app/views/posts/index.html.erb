
<div class="posts-wrapper row">
  <% @posts.each do |post| %>
  <div class="post">
    <div class="post-head">
      <div class="name">
        Nome do autor
      </div><!-- .name -->
    </div><!-- .post-head -->
    <div class="image center-block">
      <%= link_to (image_tag post.image.url(:medium), class: 'img-responsive'), post_path(post) %>
    </div><!-- .image .center-block -->
    <p class="caption"><%= post.caption %></p>
  </div><!-- .post -->
  <% end %><!-- each -->
</div><!-- .posts-wrapper -->
